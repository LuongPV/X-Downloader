<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pv.xdownloader.ui.guide.OverflowViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/bg_guide"
        app:layout_constraintBottom_toTopOf="@+id/si_step_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <com.layer_net.stepindicator.StepIndicator
        android:id="@+id/si_step_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp_guide"
        app:siBackgroundColor="@color/blue_light"
        app:siStepColor="@color/blue_bold" />

</android.support.constraint.ConstraintLayout>
