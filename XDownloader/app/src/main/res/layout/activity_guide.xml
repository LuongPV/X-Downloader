<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pv.xdownloader.ui.tour.OverflowViewPager
        android:background="@mipmap/bg_guide"
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <com.layer_net.stepindicator.StepIndicator
        android:id="@+id/si_step_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:siBackgroundColor="@color/blue_light"
        app:siStepColor="@color/blue_bold" />

</LinearLayout>
